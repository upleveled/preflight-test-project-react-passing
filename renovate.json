{
  "extends": ["github>karlhorky/renovate-config:default.json5"],
  "schedule": null,
  "packageRules": [
    {
      "groupName": "dependency upgrades - non-major",
      "depTypeList": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ],
      "updateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "groupName": "dependency upgrades - major",
      "depTypeList": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ],
      "updateTypes": ["major"],
      "automerge": true
    }
  ]
}
